@using BibliotecaESFE.EN
@model BibliotecaESFE.EN.Libros

@{
    ViewData["Title"] = "Crear";
    List<Autores> autores = ViewBag.Autores as List<Autores>;
    List<Editoriales> editoriales = ViewBag.Editoriales as List<Editoriales>;
    List<Categorias> categorias = ViewBag.Categorias as List<Categorias>;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f9f9f9;
            font-family: 'Roboto', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 30px;
            font-weight: bold;
            font-size: 24px;
            text-transform: uppercase;
        }

        form {
            background-color: #fff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        select, input[type="text"] {
            border-radius: 5px;
            border: 1px solid #ccc;
            padding: 10px;
            width: 100%;
            transition: border-color 0.2s;
        }

            select:focus, input[type="text"]:focus {
                border-color: #007bff;
                outline: none;
            }

        input[type="submit"] {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.2s;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }

        .back-link {
            margin-top: 20px;
            display: block;
            text-align: center;
            color: #007bff;
            font-weight: bold;
            text-decoration: none;
            font-size: 16px;
            text-transform: uppercase;
        }

            .back-link:hover {
                color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Crear Nuevo Libro</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label">Título:</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Disponibilidad" class="control-label">Disponibilidad:</label>
                <input asp-for="Disponibilidad" class="form-control" />
                <span asp-validation-for="Disponibilidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Autores:</label>
                <select asp-for="AutorId" class="form-control">
                    <option value="0">SELECCIONAR</option>
                    @foreach (var item in autores)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Editoriales:</label>
                <select asp-for="EditorialId" class="form-control">
                    <option value="0">SELECCIONAR</option>
                    @foreach (var item in editoriales)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Categorías:</label>
                <select asp-for="CategoriaId" class="form-control">
                    <option value="0">SELECCIONAR</option>
                    @foreach (var item in categorias)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
            </div>
        </form>
        <a asp-action="Index" class="back-link">Regresar a la lista</a>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
