@model BibliotecaESFE.EN.Categorias

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles de la categoría</h1>

<div>
    <h4>Categorias</h4>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>

    </dl>
</div>
<div>
    @Html.ActionLink("Modificar", "Edit", new { id = Model.Id }, new { @class = "btn btn-outline-success" }) |
    <a asp-action="Index">Regresar a la lista</a>
</div>
