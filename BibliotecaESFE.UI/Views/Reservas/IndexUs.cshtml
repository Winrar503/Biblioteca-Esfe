@model IEnumerable<BibliotecaESFE.EN.Reservas>

@{
    ViewData["Title"] = "Listado de reservas";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Estilos para hacer la lista atractiva */
        .card {
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 10px;
            padding: 20px;
            border-radius: 8px;
            transition: transform 0.3s;
            display: flex;
            align-items: center;
        }

            .card:hover {
                transform: scale(1.02);
            }

        .avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 20px;
        }

        .details {
            flex: 1;
        }

        .user-info {
            font-size: 18px;
            margin-bottom: 8px;
        }

        .book-info {
            font-size: 16px;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <div class="card-list">
            @foreach (var item in Model)
            {
                <div class="card">
                    <img src="https://i.pravatar.cc/150?u=@item.UsuarioId" alt="Avatar" class="avatar">
                    <div class="details">
                        <div class="user-info">Usuario: @item.Usuarios.Name</div>
                        <div class="book-info">Libro: @item.Libros.Titulo</div>
                        <div class="book-info">Fecha de Reserva: @item.FechaReserva.ToShortDateString()</div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
