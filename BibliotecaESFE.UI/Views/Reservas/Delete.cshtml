
@model BibliotecaESFE.EN.Reservas

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>¿Esta seguro que desea eliminar esta reserva?</h3>
<div>
    <h4>Reservas</h4>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuarios)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuarios.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Libros)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Libros.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaReserva)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaReserva)
        </dd>
      
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index">Regresar a la lista</a>
    </form>
    <span class="text-danger">@ViewBag.Error</span>
</div>
